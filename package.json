{
  "name": "Bibliotheque",
  "version": "1.0.0",
  "description": "Application de gestion de bibliothèque",
  "main": "main.js",
"scripts": {
  "start": "electron .",
  "dev": "concurrently \"npm run dev:backend\" \"npm run dev:nuxt\"",
  "dev:backend": "node backend/app.js",
  "dev:nuxt": "npm run dev --prefix client",
  "build": "electron-builder"
},
  "build": {
    "appId": "com.bibliotheque.pf33",
    "productName": "Bibliothèque Françoise",
    "win": {
      "target": "nsis",
      "icon": "pf.ico"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "backend/**/*",
      "client/dist/**/*",
      "database/**/*"
    ],
    "extraResources": [
      {
        "from": "client/dist",  
        "to": "client",
        "filter": ["**/*"]
      },
      {
        "from": "backend",  
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "database",  
        "to": "database",
        "filter": ["**/*"]
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "asar": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  }
}
